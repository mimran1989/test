{
	"name": "Provus",
	"private": true,
	"version": "0.0.1",
	"description": "Provus Quoting",
	"scripts": {
		"build": "rm -r -f force-app/main/default/staticresources/Provus && npm run compile",
		"compile": "webpack --config webpack.config.js --stats-children",
		"deleteSLDSBackup": "rm -r -f node_modules/\\@salesforce-ux/design-system/assets/styles/salesforce-lightning-design-system.css.bak",
		"fixSLDSPaths": "sed -i'.bak' 's|\"/assets|\"../../assets|g' node_modules/\\@salesforce-ux/design-system/assets/styles/salesforce-lightning-design-system.css",
		"lint": "npm run lint:lwc && npm run lint:aura && npm run lint:ui && npm run lint:src",
		"lint-staged": "lint-staged",
		"lint:aura": "eslint **/aura/**/*.js",
		"lint:aura:fix": "prettier --no-error-on-unmatched-pattern --write **/aura/**/*.js ; eslint **/aura/**/*.js --fix",
		"lint:fix": "npm run lint:lwc:fix & npm run lint:aura:fix & npm run lint:ui:fix & npm run lint:src:fix",
		"lint:lwc": "eslint **/lwc/**/*.js && stylelint **/lwc/**/*.css",
		"lint:lwc:fix": "prettier --no-error-on-unmatched-pattern --write **/lwc/** ; eslint **/lwc/**/*.js --fix & stylelint **/lwc/**/*.css --fix",
		"lint:src": "prettier --no-error-on-unmatched-pattern --check **/default**/\\!\\(staticresources\\)/**/*.{cls,cmp,component,html,json,md,page,trigger,xml,yaml,yml}",
		"lint:src:fix": "prettier --no-error-on-unmatched-pattern --write --no-error-on-unmatched-pattern **/default**/\\!\\(staticresources\\)/**/*.{cls,cmp,component,html,json,md,page,trigger,xml,yaml,yml}",
		"lint:ui": "eslint **/ui/**/*.ts && stylelint ui/**/*.css",
		"lint:ui:fix": "prettier --no-error-on-unmatched-pattern --write **/ui/**/*.ts ; eslint **/ui/**/*.ts --fix & stylelint ui/**/*.css --fix",
		"postinstall": "npm run fixSLDSPaths && npm run deleteSLDSBackup",
		"prepare": "is-ci || husky install",
		"tests": "npm run test:ui npm run test:lwc",
		"test:ui": "jest --config ui/jest.config.js --colors --passWithNoTests --coverage .*/ui/.*\\.test\\.ts",
		"test:lwc": "sfdx-lwc-jest -- --passWithNoTests --colors --coverage",
		"test:functional": "docker pull provus1/provus-ci:2.0;docker run -it -v `pwd`:/quoting provus1/provus-ci:2.0 /bin/bash -c \"cd quoting;export TEST_CAFE_BROWSER=chromium:headless;npm run test:functional:live\"",
		"test:functional:managed": "docker pull provus1/provus-ci:2.0;docker run -it -v `pwd`:/quoting provus1/provus-ci:2.0 /bin/bash -c \"cd quoting;export TEST_CAFE_BROWSER=chromium:headless;npm run test:functional:live:managed\"",
		"test:functional:arm64": "docker pull provus1/provus-ci-arm:1.0;docker run -it -v `pwd`:/quoting provus1/provus-ci-arm:1.0 /bin/bash -c \"cd quoting;export TEST_CAFE_BROWSER=chromium:headless;npm run test:functional:live\"",
		"test:functional:live": "cd tests;cucumber-js --require \"./*.ts\" --require \"./**/*.ts\" --require-module \"ts-node/register\"",
		"test:functional:managed:live": "cd tests;cucumber-js --require \"./*.ts\" --require \"./**/*.ts\" --require-module \"ts-node/register\" --world-parameters '{\"namespacePrefix\":\"PSQ\"}'"
	},
	"author": "Provus",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@cucumber/cucumber": "^8.0.0-rc.1",
		"@lwc/eslint-plugin-lwc": "^1.0.1",
		"@prettier/plugin-xml": "^0.13.1",
		"@salesforce/eslint-config-lwc": "^2.0.0",
		"@salesforce/eslint-plugin-aura": "^2.0.0",
		"@salesforce/eslint-plugin-lightning": "^0.1.1",
		"@salesforce/sfdx-lwc-jest": "^0.13.0",
		"@salesforce/wire-service-jest-util": "^4.0.0",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/exec": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@slack/web-api": "^6.6.0",
		"@types/async": "^3.2.6",
		"@types/jest": "^25.2.3",
		"@types/lodash": "^4.14.168",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^3.1.0",
		"@typescript-eslint/parser": "^3.1.0",
		"base64-img": "^1.0.4",
		"css-loader": "~5.2.0",
		"eslint": "^7.0.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jest": "^23.13.2",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-testcafe": "^0.2.1",
		"file-loader": "^6.2.0",
		"fs-extra": "^10.0.0",
		"html-webpack-plugin": "^5.3.1",
		"husky": "^6.0.0",
		"is-ci": "^3.0.1",
		"jest": "^26.0.1",
		"jsforce": "^1.11.0",
		"lint-staged": "^11.0.0",
		"mini-css-extract-plugin": "^1.4.1",
		"prettier": "^2.5.1",
		"prettier-plugin-apex": "^1.9.1",
		"resolve": "^1.20.0",
		"sass-loader": "^11.1.0",
		"semantic-release": "^19.0.2",
		"sfdx-cli": "^7.110.0",
		"sfdx-node": "^3.2.0",
		"stylelint": "^13.13.1",
		"stylelint-config-airbnb": "^0.0.0",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.19.0",
		"testcafe": "^1.18.1",
		"ts-jest": "~26.5.6",
		"ts-loader": "^8.1.0",
		"ts-node": "^10.4.0",
		"webpack": "~5.33.2",
		"webpack-cli": "~4.6.0",
		"yargs": "^17.3.1"
	},
	"dependencies": {
		"@nativedocuments/docx-wasm": "^2.2.13-1561490777",
		"@salesforce-ux/design-system": "^2.14.3",
		"async": "~3.2.0",
		"deferred": "^0.7.11",
		"handsontable": "~8.3.2",
		"lodash": "^4.17.21",
		"uuid": "^8.3.2"
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix",
			"jest --findRelatedTests --config ui/jest.config.js"
		],
		"**/default**/!(staticresources)/**/*.js": [
			"prettier --write",
			"eslint --fix",
			"sfdx-lwc-jest -- --findRelatedTests"
		],
		"*.css": "stylelint --fix --allow-empty-input",
		"*.cls": [
			"prettier --write"
		],
		"*.{cmp,component,html,json,md,page,trigger,xml,yaml,yml}": "prettier --write"
	}
}
